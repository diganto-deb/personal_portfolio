  // Navigation handling
  document.addEventListener('DOMContentLoaded', () => {
    const navLinks = document.querySelectorAll('nav a');
    const mobileMenu = document.getElementById('mobile-menu');
    const sections = {
      home: document.getElementById('home'),
      about: document.getElementById('about'),
      contact: document.getElementById('contact')
    };

    function showSection(sectionId: string) {
      // Prevent default scroll behavior
      event?.preventDefault();
      
      // Hide all sections first
      Object.values(sections).forEach(section => {
        if (section) {
          section.classList.add('hidden');
          section.setAttribute('aria-hidden', 'true');
        }
      });

      // Show target section
      const targetSection = sections[sectionId as keyof typeof sections];
      if (targetSection) {
        targetSection.classList.remove('hidden');
        targetSection.setAttribute('aria-hidden', 'false');
        window.scrollTo({ top: 0, behavior: 'smooth' });
      }

      // Update URL without page reload
      history.pushState(null, '', `#${sectionId}`);

      // Close mobile menu immediately
      if (mobileMenu) {
        mobileMenu.classList.add('hidden');
      }
    }

    // Handle navigation clicks
    navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('href')?.replace('#', '') || 'home';
        
        // Update active link styling
        navLinks.forEach(l => l.classList.remove('text-primary', 'active'));
        link.classList.add('text-primary', 'active');
        
        showSection(targetId);
      });
    });

    // Handle direct URL access with hash
    window.addEventListener('load', () => {
      const hash = window.location.hash.replace('#', '') || 'home';
      showSection(hash);
      
      // Update active link
      const activeLink = document.querySelector(`nav a[href="#${hash}"]`);
      if (activeLink) {
        navLinks.forEach(l => l.classList.remove('text-primary', 'active'));
        activeLink.classList.add('text-primary', 'active');
      }
    });

    // Handle browser back/forward buttons
    window.addEventListener('popstate', () => {
      const hash = window.location.hash.replace('#', '') || 'home';
      showSection(hash);
      
      // Update active link
      const activeLink = document.querySelector(`nav a[href="#${hash}"]`);
      if (activeLink) {
        navLinks.forEach(l => l.classList.remove('text-primary', 'active'));
        activeLink.classList.add('text-primary', 'active');
      }
    });

    // Show initial section based on URL or default to home
    const initialHash = window.location.hash.replace('#', '') || 'home';
    showSection(initialHash);
  });
  </script>

